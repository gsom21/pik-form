{% extends 'base.html.twig' %}

{% block title %}PIK{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
</div>
<script>
    new IMask(document.getElementById('form_card'), {
        mask: '0000000000000000'
    });
    new IMask(document.getElementById('form_mm'), {
        mask: '00'
    });
    new IMask(document.getElementById('form_yy'), {
        mask: '0000'
    });
    new IMask(document.getElementById('form_cvv'), {
        mask: '000'
    });
</script>
{% endblock %}
